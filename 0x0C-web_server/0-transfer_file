#!/usr/bin/env bash

# Function to display usage instructions
usage() {
    echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
}

# Check if number of parameters is less than 4
if [ "$#" -lt 4 ]; then
    usage
fi

# Parameters
file_path=$1
server_ip=$2
username=$3
ssh_key=$4

# Check if file exists
if [ ! -f "$file_path" ]; then
    echo "Error: File '$file_path' does not exist."
    exit 1
fi

# Transfer file using scp with strict host key checking disabled
scp -i "$ssh_key" -o StrictHostKeyChecking=no "$file_path" "$username@$server_ip":~/

exit 0
